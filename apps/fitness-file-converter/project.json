{
    "name": "fitness-file-converter",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "apps/fitness-file-converter/src",
    "projectType": "application",
    "tags": [],
    "targets": {
        "build": {
            "executor": "@nx/esbuild:esbuild",
            "outputs": ["{options.outputPath}"],
            "defaultConfiguration": "production",
            "options": {
                "platform": "node",
                "outputPath": "dist/apps/fitness-file-converter",
                "format": ["cjs"],
                "bundle": false,
                "main": "apps/fitness-file-converter/src/main.ts",
                "tsConfig": "apps/fitness-file-converter/tsconfig.app.json",
                "assets": ["apps/fitness-file-converter/src/assets"],
                "generatePackageJson": true,
                "esbuildOptions": {
                    "sourcemap": true,
                    "outExtension": {
                        ".js": ".js"
                    }
                }
            },
            "configurations": {
                "development": {},
                "production": {
                    "esbuildOptions": {
                        "sourcemap": false,
                        "outExtension": {
                            ".js": ".js"
                        }
                    }
                }
            }
        },
        "serve": {
            "continuous": true,
            "executor": "@nx/js:node",
            "defaultConfiguration": "development",
            "dependsOn": ["build"],
            "options": {
                "buildTarget": "fitness-file-converter:build",
                "runBuildTargetDependencies": false
            },
            "configurations": {
                "development": {
                    "buildTarget": "fitness-file-converter:build:development"
                },
                "production": {
                    "buildTarget": "fitness-file-converter:build:production"
                }
            }
        },
        "test": {
            "options": {
                "passWithNoTests": true
            }
        }
    }
}
